---
export interface Props {
	title: string;
	channelName: string;
	description: string;
	videoId: string;
}

const { title, channelName, description, videoId } = Astro.props;
const href = `https://www.youtube.com/watch?v=${videoId}`;
const thumbnail = `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`;
---

<li class="youtube-card">
	<a href={href} target="_blank" rel="noopener noreferrer">
		<div class="card-image">
			<img src={thumbnail} alt={title} />
			<div class="play-button">
				<svg width="68" height="48" viewBox="0 0 68 48">
					<path d="M66.52,7.74c-0.78-2.93-3.09-5.23-6.02-6.01C55.17,0.26,34,0.26,34,0.26s-21.17,0-26.5,1.47 c-2.93,0.78-5.24,3.08-6.02,6.01C0,13.07,0,24,0,24s0,10.93,1.48,16.26c0.78,2.93,3.09,5.16,6.02,5.94 C12.83,47.74,34,47.74,34,47.74s21.17,0,26.5-1.54c2.93-0.78,5.24-3.01,6.02-5.94C68,34.93,68,24,68,24S68,13.07,66.52,7.74z" fill="rgba(255,0,0,0.85)"/>
					<path d="M 45,24 27,14 27,34" fill="#fff"/>
				</svg>
			</div>
		</div>
		<div class="card-content">
			<h3>{title}</h3>
			<p class="channel-name">{channelName}</p>
			<p class="description">{description}</p>
		</div>
	</a>
</li>

<style>
	.youtube-card {
		list-style: none;
		display: flex;
		background-color: white;
		border: 1px solid rgba(var(--accent), 25%);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.2s;
	}

	.youtube-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
	}

	.youtube-card a {
		text-decoration: none;
		color: inherit;
		display: block;
		width: 100%;
	}

	.card-image {
		position: relative;
		width: 100%;
		padding-top: 56.25%; /* 16:9 Aspect Ratio */
		overflow: hidden;
		background-color: #000;
	}

	.card-image img {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.play-button {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		transition: opacity 0.2s;
	}

	.youtube-card:hover .play-button {
		opacity: 0.8;
	}

	.card-content {
		padding: 1rem;
	}

	.card-content h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.1rem;
		font-weight: 600;
		color: #333;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.channel-name {
		margin: 0 0 0.5rem 0;
		color: #606060;
		font-size: 0.9rem;
	}

	.description {
		margin: 0;
		color: #666;
		font-size: 0.875rem;
		line-height: 1.4;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>