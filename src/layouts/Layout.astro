---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
	    <meta charset="UTF-8" />
	    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=no">
	    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
	    <meta name="generator" content={Astro.generator} />
	    <meta name="robots" content="noindex, nofollow" />
	    <title>{title}</title>
　　     <meta property="og:title" content={title}>
        <meta property="og:description" content="Yu Otsubo - Business Card Site">
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://tubone-project24.onrender.com/">
        <meta property="og:image" content="https://tubone-project24.onrender.com/ogp.png">
        <meta property="og:site_name" content="Yu Otsubo - Business Card Site">
        <meta property="og:locale" content="ja_JP">
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:site" content="@tubone24">
        <script
          type="text/partytown"
          src="https://www.googletagmanager.com/gtag/js?id=G-FRVDK24109">
        </script>
        <script type="text/partytown">
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag("js", new Date());
          gtag("config", "G-FRVDK24109");
        </script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
        --gray-999: #ffffff;
        --accent-regular: #7611a6;
		--accent: 124, 58, 237;
		--accent-second: 24, 158, 137;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #6FD740 30%, white 60%);
        --accent-text-over: var(--gray-999);
		--background-color: #F6F6F6;
		--text-color: #333333;
		--card-background: #ffffff;
		--border-color: rgba(124, 58, 237, 0.25);
	}

	/* ダークモード用のカラー設定 */
	:root.dark-mode {
		--gray-999: #1a1a1a;
		--background-color: #1a1a1a;
		--text-color: #e0e0e0;
		--card-background: #2a2a2a;
		--border-color: rgba(124, 58, 237, 0.5);
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #6FD740 30%, #1a1a1a 60%);
	}

	html {
		font-family: system-ui, sans-serif;
		background-color: var(--background-color);
		color: var(--text-color);
		overflow-x: hidden;
		transition: background-color 0.3s ease, color 0.3s ease;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
