---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { Modal } from 'accessible-astro-components';
import { Icon } from 'astro-icon';

// localhostの場合はPrairie Cardに送信しない
let statusIsOk = false;
if (!Astro.url.href.includes('localhost')) {
	const prairieCardResponse = await fetch(
		"https://my.prairie.cards/cards/d9dfbdf6-e6dd-435b-95ef-e31740a9f67e",
		{credentials: 'include',});
	statusIsOk = prairieCardResponse.status < 400;
}
---

<Layout title="tubone24">
	<!--トーストの実装-->
	{statusIsOk && <div class="toast">Success sending history to Prairie Card!!!</div>}
	{!statusIsOk && <div class="toast-failed">Failed sending history to Prairie Card!!!</div>}
	<main>
	    <div class="header-container">
	      <h1><span class="text-gradient">Yu Otsubo</span></h1>
		  <img class="myicon" src="/icon.png" alt="my icon" />
		</div>
		<p class="instructions">
			<strong>Full Cycle Engineer</strong>@<strong class="second"><a href="https://kddi-agile.com/">KDDI Agile Development Center</a></strong><br />
			<strong class="second">Guitarist / Composer / YouTuber</strong><br /><br />
			<code>TEL: <a href="tel:080-6367-9825">080-6367-9825</a></code><br />
			<code>EMAIL: <a href="mailto:yu-ootsubo@kddi-agile.com">yu-ootsubo@kddi-agile.com</a> / <a href="mailto:tubo.yyyuuu@gmail.com">tubo.yyyuuu@gmail.com</a></code>
		</p>
		<div class="contact">
		    <button class="cool-button" id="open-qr"><Icon class="icon" name="ic:sharp-qr-code-2" />Open My QR Code</button>
			<button class="cool-button2" id="open-contact"><Icon class="icon" name="ic:baseline-mail" />Download Contact</button>
			<button class="cool-button3" id="open-nft"><Icon class="icon" name="fluent:sparkle-16-regular" />Get My NFT</button>
		</div>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://blog.tubone-project24.xyz/"
