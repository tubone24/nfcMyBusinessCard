<script>

</script>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	h2 {
		font-size: 2rem;
		font-weight: 500;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.instructions .second {
		color: rgb(var(--accent-second));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	.header-container {
        display: flex;
        align-items: flex-start;
        justify-content: space-around;
        align-items: center;
    }

    .header-container .icon {
       margin-right: 10px;
       width: 19px;
       margin-right: 10px;
       vertical-align: middle;
    }

    .header-container a {
      margin-left: 10px;
    }

    .header-container img {
        width: 20%;
        object-fit:cover;
    }

	.contact {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        align-items: center;
		-webkit-touch-callout:none;
		-webkit-user-select:none;
		-moz-touch-callout:none;
		-moz-user-select:none;
		user-select:none;
    }

    .qr {
      align-self: center;
	  max-width: 400px;
	  width: 100%;
    }

	.nft {
		align-self: center;
		text-align: center;
		width: 100%;
	}

	.nft-img {
		pointer-events: none;
		max-width: 400px;
		width: 100%;
	}

	@keyframes sparkle {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	.cool-button, .cool-button2, .cool-button3 {
		position: relative;
		overflow: hidden;
		z-index: 1;
	}

	.cool-button::before, .cool-button2::before, .cool-button3::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(120deg, rgba(255,255,255,0) 0%, rgba(36, 224, 142, 0.8) 50%, rgba(255,255,255,0) 100%);
		z-index: -1;
		opacity: 0;
		transition: opacity 0.5s;
		background-size: 200% auto;
	}

	.cool-button:hover::before, .cool-button2:hover::before, .cool-button3:hover::before {
		opacity: 1;
		animation: sparkle 1.5s linear infinite;
	}

    .cool-button {
      display: block;
      margin: 0 10px;
      background-image: linear-gradient(45deg, rgb(var(--accent)), #6FD740 30%, rgba(var(--accent), 40%));
      color: #fff;
      text-align: center;

      text-decoration: none;
      padding: 8px 16px;
      border-radius: 4px;
      transition: background-color 0.3s ease;
      cursor: pointer;
    }

    .cool-button:hover {
       background-color: rgba(var(--accent), 12%);
    }
    .cool-button .icon {
       margin-right: 10px;
       width: 19px;
       margin-right: 10px;
       vertical-align: middle;
    }
    .cool-button2 {
      display: block;
      margin: 0 10px;
      background-image: linear-gradient(45deg, rgb(var(--accent)), #6FD740 80%, rgba(var(--accent), 20%));
      color: #fff;
      text-align: center;

      text-decoration: none;
      padding: 8px 16px;
      border-radius: 4px;
      transition: background-color 0.3s ease;
      cursor: pointer;
    }

    .cool-button2:hover {
       background-color: rgba(var(--accent), 12%);
    }
    .cool-button2 .icon {
       margin-right: 10px;
       width: 19px;
       margin-right: 10px;
       vertical-align: middle;
    }

	.cool-button3 {
		display: block;
		margin: 0 10px;
		background-image: linear-gradient(45deg, rgb(var(--accent)), #4bffde 80%, rgba(var(--accent), 20%));
		color: #ffffff;
		text-align: center;

		text-decoration: none;
		padding: 8px 16px;
		border-radius: 4px;
		transition: background-color 0.3s ease;
		cursor: pointer;
	}

	.cool-button3:hover {
		background-color: rgba(var(--accent), 12%);
	}
	.cool-button3 .icon {
		margin-right: 10px;
		width: 19px;
		margin-right: 10px;
		vertical-align: middle;
	}

	.download-contact {
		align-self: center;
	}

	.download-business-card {
		align-self: center;
	}

	.business-card {
		max-width: 200px;
		width: 100%;
	}

	.toast {
		position: fixed;
		top: 0px;
		opacity: 0;
		text-align: center;
		font-family: Arial, Helvetica, sans-serif;
		color: rgb(var(--accent));
		font-weight: bold;
		padding: 15px 30px;
		border-radius: 10px 10px;
		background-color: #4bffde;
		animation-duration: 2s;
		animation-delay: 1s;
		animation-name: fadein;
		animation-fill-mode: forwards;
		box-shadow: 5px 5px 50px rgb(176, 176, 176);
	}

	.toast-failed {
		position: fixed;
		top: 0px;
		opacity: 0;
		text-align: center;
		font-family: Arial, Helvetica, sans-serif;
		color: rgb(var(--accent));
		font-weight: bold;
		padding: 15px 30px;
		border-radius: 10px 10px;
		background-color: #ff4b4b;
		animation-duration: 2s;
		animation-delay: 1s;
		animation-name: fadein;
		animation-fill-mode: forwards;
		box-shadow: 5px 5px 50px rgb(176, 176, 176);
	}

	@keyframes fadein {
		0% {
			opacity: 0;
			top: 0px;
		}
		15% {
			opacity: 1;
			top: 10px;
		}
		95% {
			opacity: 1;
			top: 10px;
		}
		100% {
			opacity: 0;
			top: 0px;
		}
	}
</style>
