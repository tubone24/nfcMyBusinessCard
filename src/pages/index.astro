<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ダークモード切り替え機能
    const darkModeToggle = document.getElementById('dark-mode-toggle');
    const htmlElement = document.documentElement;

    // Update aria-pressed based on current state
    const updateAriaPressed = () => {
      const isDark = htmlElement.classList.contains('dark-mode');
      if (darkModeToggle) {
        darkModeToggle.setAttribute('aria-pressed', isDark ? 'true' : 'false');
      }
    };

    // LocalStorageから設定を読み込む
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'dark') {
      htmlElement.classList.add('dark-mode');
    }
    updateAriaPressed();

    // ダークモード切り替えボタンのクリックイベント
    if (darkModeToggle) {
      darkModeToggle.addEventListener('click', () => {
        htmlElement.classList.toggle('dark-mode');

        // LocalStorageに設定を保存
        if (htmlElement.classList.contains('dark-mode')) {
          localStorage.setItem('theme', 'dark');
        } else {
          localStorage.setItem('theme', 'light');
        }

        // Update aria-pressed
        updateAriaPressed();
      });
    }

    const myicon = document.getElementById('myicon');
    const runningDogContainer = document.getElementById('running-dog');

    if (myicon && runningDogContainer) {
      myicon.addEventListener('click', () => {
        console.log('Icon clicked!'); // デバッグ用

        // 既存の犬を削除
        runningDogContainer.innerHTML = '';

        // 新しい犬を作成
        const dog = document.createElement('img');
        // ランダムでmugi.pngまたはmugi2.pngを選択
        const mugiImages = ['/mugi.png', '/mugi2.png'];
        const randomIndex = Math.floor(Math.random() * mugiImages.length);
        dog.src = mugiImages[randomIndex];

        // スタイルを直接設定
        dog.style.position = 'absolute';
        dog.style.width = '150px';
        dog.style.height = '150px';
        dog.style.left = '-200px';

        // ランダムな開始位置
        const startY = Math.random() * (window.innerHeight - 200);
        dog.style.top = startY + 'px';

        runningDogContainer.appendChild(dog);

        // アニメーションを少し遅れて開始
        setTimeout(() => {
          dog.style.animation = 'zigzagRun 4s linear forwards';
        }, 10);

        // アニメーション終了後に削除（複数のイベント名に対応）
        dog.addEventListener('animationend', () => {
          dog.remove();
        });
        dog.addEventListener('webkitAnimationEnd', () => {
          dog.remove();
        });

        // 5秒後に強制的に削除（フォールバック）
        setTimeout(() => {
          if (dog.parentNode) {
            dog.remove();
          }
        }, 5000);
      });
    }

    // QRコード/ARマーカー 5回タップで切り替える機能
    const qrImage = document.getElementById('qr-image') as HTMLImageElement;
    const tapCounter = document.getElementById('tap-counter');
    let tapCount = 0;
    let tapTimeout: number | null = null;
    let isMarkerMode = false; // 現在ARマーカーモードかどうか

    if (qrImage && tapCounter) {
      qrImage.addEventListener('click', () => {
        tapCount++;

        if (!isMarkerMode) {
          // QR Code Mode: Switch to AR Marker
          if (tapCount < 5) {
            tapCounter.textContent = `${tapCount}/5 taps - ${
              5 - tapCount
            } more to switch to AR marker`;
          }

          if (tapCount >= 5) {
            qrImage.src = '/ar-marker.png';
            qrImage.style.cursor = 'pointer';
            tapCounter.innerHTML =
              'Switched to AR marker!<br>' +
              '<a href="/ar.html" style="color: #4bffde; text-decoration: underline;">' +
              'Launch AR Camera</a>';
            isMarkerMode = true;
            tapCount = 0;
          }
        } else {
          // AR Marker Mode: Back to QR Code
          if (tapCount < 5) {
            tapCounter.textContent = `${tapCount}/5 taps - ${
              5 - tapCount
            } more to return to QR code`;
          }

          if (tapCount >= 5) {
            qrImage.src = '/qr.png';
            qrImage.style.cursor = 'default';
            tapCounter.textContent = 'Returned to QR code';
            isMarkerMode = false;
            tapCount = 0;

            // Clear message after 2 seconds
            setTimeout(() => {
              if (tapCounter) tapCounter.textContent = '';
            }, 2000);
          }
        }

        // Reset count if no taps for 3 seconds
        if (tapTimeout !== null) {
          clearTimeout(tapTimeout);
        }
        tapTimeout = window.setTimeout(() => {
          if (tapCount < 5) {
            tapCount = 0;
            if (!isMarkerMode) {
              tapCounter.textContent = '';
            } else {
              // Keep AR camera launch link in marker mode
              tapCounter.innerHTML =
                'Switched to AR marker!<br>' +
                '<a href="/ar.html" style="color: #4bffde; text-decoration: underline;">' +
                'Launch AR Camera</a>';
            }
          }
        }, 3000);
      });
    }
  });
</script>

